from stock_master import AtomicTradingFusion
from stock_master.config import TradingStrategies, RiskProfiles

# Initialize Atomic Fusion Trading System
trading_system = AtomicTradingFusion(
    strategy=TradingStrategies.QUANTUM_TREND_FUSION,
    risk_profile=RiskProfiles.MODERATE,
    elements_enabled=['fire', 'water', 'earth', 'wind', 'lightning']
)

# Start trading on specific symbols
await trading_system.start_trading(
    symbols=['AAPL', 'MSFT', 'GOOGL', 'TSLA'],
    initial_capital=100000,
    risk_limits={
        'max_drawdown': 0.10,
        'var_limit': 0.05,
        'position_limit': 0.25
    }
)

# Monitor system performance
performance = await trading_system.get_performance_metrics()
print(f"System Performance: {performance['composite_score']}")
print(f"Risk-Adjusted Return: {performance['sharpe_ratio']}")
